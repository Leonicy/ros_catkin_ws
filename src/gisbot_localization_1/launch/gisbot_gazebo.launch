<launch>
    <!-- 将 Urdf 文件的内容加载到参数服务器 -->
    <param name="robot_description" command="$(find xacro)/xacro $(find gisbot_localization_1)/urdf/my_car_1.urdf.xacro" />
    <!-- 启动 gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- 启动控制器管理器 -->
    <node name="controller_manager" pkg="controller_manager" 
          type="controller_manager"  output="screen"/>
    
    <!-- 加载控制器配置文件 -->
    <rosparam file="$(find gisbot_localization_1)/config/ackermann_controller.yaml" command="load"/>
    
    <!-- Spawn the Ackermann Steering Controller -->
    <node name="ackermann_steering_controller_spawner" pkg="controller_manager" 
          type="spawner" args="ackermann_steering_controller" output="screen"/>
    
    <!-- 启动control节点-->
    <include file="$(find gisbot_localization_1)/launch/control.launch"/>
    
    <!-- 在 gazebo 中显示机器人模型 -->
    <node pkg="gazebo_ros" type="spawn_model" name="model" args="-urdf -model my_car -param robot_description" output="screen"/>

</launch>